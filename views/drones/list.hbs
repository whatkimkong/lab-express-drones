<h2>Available drones</h2>
<div class="drones-list">

  <a href="/drones/create">Create a Drone</a>
  {{#each drones}}
    <h3>{{this.name}}</h3>
    <ul>
      <li>{{this.propellers}}</li>
      <li>{{this.maxSpeed}}</li>
    </ul>

    <a href="/drones/{{this.id}}/edit">Edit</a>
    <form action="/drones/{{this.id}}/delete" method="POST">
      <button type="submit">Delete Drone</button>
    </form>
  {{/each}}
</div>